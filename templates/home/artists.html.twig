<div id="response">
    {% if youtubeUrl %}
    <div class="youtube-video-container">
        <iframe width="560" height="315" src="{{ youtubeUrl|replace({'https://www.youtube.com/watch?v=': 'https://www.youtube.com/embed/'}) }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>
    <p class="video-not-available">
        Si la vid√©o ne s'affiche pas correctement, vous pouvez la regarder sur <a href="{{ youtubeUrl }}" target="_blank">YouTube</a>.
    </p>
    {% endif %}
    {% if artistSuggestions is not null %}
    <div class="artist-suggestions">
        <h2>Suggestions d'artistes :</h2>
        <ul class="list-group">
            {% for artist in artistSuggestions %}
                <li class="list-group-item response-list">{{ artist |raw}}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

</div>