{% extends 'base.html.twig' %}

{% block title %}Découverte d'artistes{% endblock %}

{% block body %}
    <div class="container contact-form">
        <div class="contact-image">
            <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact"/>
        </div>
        {{ form_start(artistForm, {'attr': {'class': 'form-horizontal'}}) }}
            <h2>{{'intro.discover'|trans}}</h2>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        {{ form_label(artistForm.artistQuery, 'Trouvez des artistes similaires à:', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(artistForm.artistQuery, {'attr': {'class': 'form-control', 'placeholder': 'Madonna, The Beatles, etc.'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(artistForm.submit, {
                            label_html: true,
                            label: 'Rechercher <img class="htmx-indicator" src="/loader.svg"/>',
                            attr: {
                                class: 'btnContact',
                                'hx-indicator': '.htmx-indicator',
                                'hx-swap': 'outerHTML'
                            }
                        }) }}
                    </div>
                </div>
            </div>
        {{ form_end(artistForm) }}
         <div id="response"></div>
    </div>
{% endblock %}